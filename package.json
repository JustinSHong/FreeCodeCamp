{
  "name": "FreeCodeCamp",
  "version": "1.0.0",
  "description": "Free Code Camp",
  "main": "index.js",
  "scripts": {
    "format": "prettier --ignore-path ./.gitignore --write **/*.ts",
    "test": "jest --verbose",
    "test-watch": "jest --watch --verbose",
    "ts-watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JustinSHong/FreeCodeCamp.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JustinSHong/FreeCodeCamp/issues"
  },
  "homepage": "https://github.com/JustinSHong/FreeCodeCamp#readme",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "husky": ">=1",
    "jest": "^24.9.0",
    "lint-staged": ">=8",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run format && eslint --fix --quiet && yarn run test"
    }
  },
  "lint-staged": {
    "*.{json}": [
      "yarn run format",
      "git add"
    ],
    "*.{ts,tsx}": [
      "yarn run format",
      "eslint --fix",
      "yarn run test",
      "git add"
    ]
  },
  "dependencies": {}
}
